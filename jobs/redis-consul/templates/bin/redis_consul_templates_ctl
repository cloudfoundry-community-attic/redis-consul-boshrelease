#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables
set -x

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/redis-consul/helpers/ctl_setup.sh 'redis-consul' 'redis-consul-templates'

export CONSUL_TMPL_DIR=/var/vcap/sys/run/consul/redis-consul

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    # consul-template wants to create a small number file in current dir?
    # so need a place that has permissions for vcap user
    mkdir -p $CONSUL_TMPL_DIR
    chown vcap:vcap -R $CONSUL_TMPL_DIR
    cd $CONSUL_TMPL_DIR

    # store pid in $PIDFILE
    echo $$ > $PIDFILE

    exec chpst -u vcap:vcap \
    consul-template \
      -template "$JOB_DIR/consul/redis-service.json:$CONSUL_TMPL_DIR/redis-service.json" \
      -template "$JOB_DIR/consul/redis-disk-level.json:$CONSUL_TMPL_DIR/redis-disk-level.json" \
         >>$LOG_DIR/$JOB_NAME.stdout.log \
         2>>$LOG_DIR/$JOB_NAME.stderr.log

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: redis_consul_ctl {start|stop}"

    ;;

esac
exit 0
